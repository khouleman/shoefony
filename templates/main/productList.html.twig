{% extends 'layout.html.twig' %}
{% block content %}
    <body>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">Nos marques</p>
                <div class="list-group">
                    <a href="#" class="list-group-item active">Toutes les marques</a>
                    <a href="#" class="list-group-item">Adidas</a>
                    <a href="#" class="list-group-item">Asics</a>
                    <a href="#" class="list-group-item">Nike</a>
                    <a href="#" class="list-group-item">Puma</a>
                </div>
            </div>

            <div class="col-md-9">
                <p class="lead">Nos produits " Toutes les marques "</p>
                <div class="row text-center">
                    {% for product in products %}
                    <div class="col-md-4 col-sm-6 hero-feature">
                        <div class="thumbnail">
                            <img src="{{ asset('img/products/' ~ product.image.url) }}" alt="{{ product.image.alt }}">
                            <div class="caption">
                                <h3>{{ product.name|title }}</h3>
                                <p>{{ product.description }}</p>
                                <p>
                                    <span class="badge">{{ product.price }} €</span>
                                    <a href="{{ path('store_show_product', {'id': product.id, 'slug': 'slug' ~ product.id}) }}"
                                       class="btn btn-default"></a>
                                </p>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>

                <div class="row text-center">
                    <nav>
                        <ul class="pagination pagination-lg">
                            <li>
                                <a href="#" aria-label="Précédent">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <li class="active">
                                <a href="#">1</a>
                            </li>
                            <li>
                                <a href="#">2</a>
                            </li>
                            <li>
                                <a href="#">3</a>
                            </li>
                            <li>
                                <a href="#">4</a>
                            </li>
                            <li>
                                <a href="#">5</a>
                            </li>
                            <li>
                                <a href="#" aria-label="Suivant">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <hr/>
    </div>
    </body>
{% endblock %}
