<div class="thumbnail">
    <img src="{{ asset(product.image.publicPath) }}" alt="{{ product.name|capitalize }}">
    <div class="caption">
        <h3>{{ product.name|capitalize }}</h3>
        <p>{{ product.description }}</p>
        <p>
            <span class="badge">{{ product.price|format_currency('EUR') }}</span>
            <a href="{{ path('store_product', {'id': product.id, 'slug': product.slug}) }}" class="btn btn-default">Voir la fiche</a>
        </p>
    </div>
</div>
